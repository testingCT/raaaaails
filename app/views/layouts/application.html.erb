<!DOCTYPE html>
<html>
  <head>
    <title>ProjetFormationRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
      <div class="container-fluid">
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-brand" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "navbar-brand" %>
          <%= link_to "Register", new_user_registration_path, class: "navbar-brand" %>
        <% end %>
      </div>
    </nav>

    <main>
      <% if user_signed_in? %>
        <h1> Bienvenu <%= current_user.first_name %> <%= current_user.last_name %> </h1>
        <div class="dashboard">
          <%= link_to "Edit Profile", edit_user_registration_path %>
        </div>
      <% else%>
        <h1> Bienvenu </h1>
      <% end %>
    </main>

    <%= yield %>
  </body>
</html>